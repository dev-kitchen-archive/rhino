<h1><%= User.model_name.human count: 2 %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name :email %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td class="actions">
          <%= link_to t('shared.edit'), edit_user_path(user) %>
          <%= link_to t('shared.destroy'), user, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <td colspan="2">
        <%= link_to t('shared.new', resource: User.model_name.human), new_user_path %>
      </td>
    </tr>
  </tfoot>
</table>
