<h1><%= Book.model_name.human count: 2 %></h1>

<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name :title %></th>
      <th><%= Book.human_attribute_name :author %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td class="actions">
          <%= link_to t('shared.show'), book %>
          <%= link_to t('shared.edit'), edit_book_path(book) %>
          <%= link_to t('shared.destroy'), book, method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <td colspan="3">
        <%= link_to t('shared.new', resource: Book.model_name.human), new_book_path %>
      </td>
    </tr>
  </tfoot>
</table>
